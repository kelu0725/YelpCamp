<% layout('layouts/boilerplate') %>

<div class="card mb-3">
  <img src="<%= campground.image%>" class="card-img-top" alt="campImage" />
  <div class="card-body">
    <h4 class="card-title"><%= campground.title %></h4>
    <p class="card-text"><%= campground.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-muted"><%= campground.location %></li>
    <li class="list-group-item">$<%= campground.price%>/night</li>
  </ul>
  <div class="card-body">
    <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning"
      >Edit</a
    >
    <form
      class="d-inline"
      action="/campgrounds/<%= campground._id %>?_method=DELETE"
      method="POST"
    >
      <button class="btn btn-danger d-inline">Delete</button>
    </form>
  </div>
  <div class="card-footer text-muted">2 days ago</div>
</div>
<div>
  <a href="/campgrounds">All Campgrounds</a>
</div>
