<% layout('layouts/boilerplate') %>

<div class="row mb-3">
  <h1 class="text-center">Log in</h1>
  <div class="col-6 offest-6">
    <form action="/login" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label for="title form-label"> Username </label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">Please provide valid username</div>
      </div>
      <div class="mb-3">
        <label for="title form-label"> Password </label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">Please provide valid password</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Log in</button>
      </div>
    </form>
  </div>
</div>
